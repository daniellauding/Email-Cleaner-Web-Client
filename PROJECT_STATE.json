    "performance": {
      "emailFetchTime": "10-15s",
      "newsletterAnalysis": "20-25s",
      "statsCalculation": "40-45s",
      "tokenRefreshTime": "automatic"
    }
  },
  "apiEndpoints": {
    "auth": {
      "signin": "/api/auth/signin",
      "callback": "/api/auth/callback/google",
      "session": "/api/auth/session",
      "signout": "/api/auth/signout"
    },
    "gmail": {
      "emails": "/api/gmail/emails",
      "emailById": "/api/gmail/emails/[id]",
      "markRead": "/api/gmail/emails/mark-read",
      "remove": "/api/gmail/emails/remove",
      "forward": "/api/gmail/emails/forward",
      "stats": "/api/gmail/stats",
      "newsletters": "/api/gmail/newsletters"
    }
  },
  "components": {
    "dashboard": {
      "path": "/app/dashboard/page.tsx",
      "lines": 1900,
      "sections": [
        "Header with user info and logout",
        "Stats cards (clickable)",
        "AI Insights & Recommendations",
        "Smart Categories & Summaries",
        "Smart Labels & Calendar",
        "AI Assistant & Focus Mode",
        "Search and Actions",
        "Email List with bulk operations",
        "Email Reading Modal",
        "Forward Email Modal",
        "Email Report Modal",
        "AI Assistant Modal"
      ]
    },
    "services": {
      "gmail": {
        "path": "/lib/gmail.ts",
        "methods": [
          "getProfile",
          "getEmails",
          "searchNewsletters",
          "getEmailStats",
          "markAsRead",
          "deleteEmails",
          "trashEmails",
          "archiveEmails",
          "forwardEmail",
          "getEmailBody"
        ]
      },
      "auth": {
        "path": "/lib/auth.ts",
        "features": [
          "Google OAuth provider",
          "Token refresh mechanism",
          "JWT callbacks",
          "Session management"
        ]
      }
    }
  },
  "dependencies": {
    "core": {
      "next": "14.2.3",
      "react": "^18",
      "typescript": "^5",
      "tailwindcss": "^3.4.1"
    },
    "auth": {
      "next-auth": "^4.24.7",
      "@auth/prisma-adapter": "^1.5.0"
    },
    "gmail": {
      "googleapis": "^134.0.0"
    },
    "ui": {
      "lucide-react": "^0.344.0",
      "tailwind-scrollbar-hide": "^1.1.7"
    },
    "database": {
      "prisma": "^5.11.0",
      "@prisma/client": "^5.11.0"
    }
  },
  "configuration": {
    "requiredEnvVars": [
      "NEXTAUTH_URL",
      "NEXTAUTH_SECRET",
      "GOOGLE_CLIENT_ID",
      "GOOGLE_CLIENT_SECRET"
    ],
    "optionalEnvVars": [
      "GOOGLE_GEMINI_API_KEY",
      "HUGGINGFACE_API_KEY",
      "OPENAI_API_KEY",
      "DATABASE_URL"
    ],
    "googleOAuthScopes": [
      "openid",
      "email",
      "profile",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify"
    ]
  },
