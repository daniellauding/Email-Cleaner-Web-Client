{
  "project": {
    "name": "Email Cleaner",
    "version": "1.0.0",
    "status": "functional",
    "lastUpdated": "2026-01-06",
    "environment": "development",
    "port": 3000,
    "framework": "Next.js 14.2.3"
  },
  "features": {
    "authentication": {
      "provider": "NextAuth with Google OAuth",
      "tokenRefresh": true,
      "sessionManagement": true,
      "status": "✅ Working"
    },
    "emailManagement": {
      "fetch": true,
      "search": true,
      "filter": true,
      "markAsRead": true,
      "archive": true,
      "trash": true,
      "delete": true,
      "forward": true,
      "reply": true,
      "status": "✅ Working"
    },
    "categorization": {
      "newsletters": {
        "detection": true,
        "categories": ["Tech & Development", "Business & Marketing", "News & Updates"],
        "count": 100
      },
      "smartLabels": {
        "meetings": true,
        "financial": true,
        "actionRequired": true,
        "followUp": true,
        "clientCustomer": true
      },
      "status": "✅ Working"
    },
    "ai": {
      "providers": ["Google Gemini", "HuggingFace", "Local"],
      "emailAssistant": true,
      "quickQueries": [
        "What's urgent?",
        "Newsletter summary",
        "Find todos",
        "Reply priority"
      ],
      "smartSuggestions": true,
      "status": "✅ Working"
    },
    "calendar": {
      "meetingDetection": true,
      "platforms": ["Zoom", "Teams", "Google Meet", "Calendar"],
      "upcomingTracking": true,
      "inviteManagement": true,
      "status": "✅ Working"
    },
    "ui": {
      "focusModes": ["all", "unread", "important", "today", "personal"],
      "displayModes": ["names", "emails", "smart"],
      "expandableCategories": true,
      "emailPreviewModal": true,
      "reportModal": true,
      "aiAssistantModal": true,
      "forwardModal": true,
      "mobileResponsive": true,
      "status": "✅ Working"
    }
